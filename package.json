{
  "name": "find-in-npm-pack",
  "version": "0.1.0",
  "bin": "index.js",
  "repository": "https://github.com/bd82/find-in-npm-pack.git",
  "author": "Shahar Soel",
  "license": "MIT",
  "description": "searches for text inside npm pack's tar file result",
  "keywords": [
    "npm pack",
    "text search"
  ],
  "files": [
    "lib",
    "LICENSE",
    "CHANGELOG.md",
    "README.md"
  ],
  "scripts": {
    "ci": "npm-run-all format:validate",
    "format:fix": "prettier --write \"**/*.@(js|json|md)\" --ignore-path=.gitignore",
    "format:validate": "prettier --check \"**/*.@(js|json)\" --ignore-path=.gitignore"
  },
  "dependencies": {
    "minimist": "^1.2.5",
    "tar": "^6.1.0"
  },
  "devDependencies": {
    "husky": "4.3.6",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "npm-run-all": "4.1.5",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "cz-conventional-changelog": "3.3.0",
    "semantic-release": "^17.3.9"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,json,md}": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
